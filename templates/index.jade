doctype html
html(lang="en")
	head
		title="Sudoku Game"
		link(rel="stylesheet",type="text/css", media="screen, projection", href="../stylesheets/screen.css")
		script(type="text/javascript" src="../jquery-1.10.2.js")
		script(type="text/javascript" src="../sudoku.js")
	body
		div#container
			main#content
				div#selection
					- var n = 1
					while n < 10
						div.number
							h2(class="selectable_number")=n++
				
				div#board_wrapper
					- var col = 0
					- var row = 0
					//- var sudokuObj = [[6,'.',2,'.','.','.','.','.',7],[8,9,'.',2,'.','.','.',6,'.'],['.',5,4,'.',6,'.',8,'.',2],['.',7,'.',6, '.',5,4,'.','.'],[4,'.','.',3,'.',9, '.','.',6],[9,6,'.','.','.','.',2,'.',5],['.',4,'.','.',7,'.','.',5,3],['.',8,'.','.','.','.',9,4,'.'],['.', '.',3,'.','.',6,7,'.',8]];
					while row < 9
						div.wrapper(display="table", width="100%", top=row * 90 + 'px')
							while col < 9
								- var borderLeft = (col != 0 && col % 3 == 0) ? 'border_left ' : ''
								- var borderTop = (row != 0 && row % 3 == 0) ? 'border_top ' : ''
								div(class=("sudoku_cell " + borderLeft + borderTop).trim())
									h2(data-row=row, data-col=col, data-val='&nbsp') &nbsp
									- col++
							- row++
							- col = 0
				aside#btnOption
					button(class='btnOption', id='clearTile') Clear Tile
					button(class='btnOption', id='clearRow') Clear Row
					button(class='btnOption', id='clearCol') Clear Column
					button(class='btnOption', id='clearAll') Clear clearAll